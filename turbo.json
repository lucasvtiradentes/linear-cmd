{
  "$schema": "https://turbo.build/schema.json",
  "remoteCache": {
    "enabled": true
  },
  "tasks": {
    "typecheck": {
      "outputLogs": "new-only",
      "inputs": [
        "src/**",
        "tests/**",
        "tsconfig.json",
        "package.json"
      ]
    },
    "build": {
      "outputLogs": "new-only",
      "outputs": [
        "dist/**"
      ],
      "inputs": [
        "src/**",
        "tsconfig.json",
        "package.json"
      ]
    },
    "dev": {
      "outputLogs": "full",
      "cache": false,
      "persistent": true
    },
    "test:unit": {
      "outputLogs": "full",
      "inputs": [
        "tests/unit/**",
        "src/**",
        "tests/unit/vitest.config.ts",
        "package.json"
      ]
    },
    "test:integration": {
      "outputLogs": "full",
      "inputs": [
        "tests/integration/**",
        "src/**",
        "tests/integration/vitest.config.ts",
        "package.json"
      ]
    },
    "test:e2e": {
      "outputLogs": "full",
      "inputs": [
        "tests/e2e/**",
        "src/**",
        "tests/e2e/vitest.config.ts",
        "package.json"
      ],
      "env": [
        "LINEAR_API_KEY_E2E"
      ]
    },
    "lint": {
      "outputLogs": "new-only",
      "inputs": [
        "src/**",
        "tests/**",
        "biome.json",
        "package.json"
      ]
    },
    "format": {
      "outputLogs": "new-only",
      "inputs": [
        "src/**",
        "tests/**",
        "biome.json",
        "package.json"
      ]
    }
  }
}