{
  // FORMATTER CONFIGS =========================================================

  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "prettier.enable": false,
  "eslint.enable": false,

  // WORKSPACE CONFIGS =========================================================

  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "package.json": "biome.json, CHANGELOG.md, .npmignore, .gitignore, .lintstagedrc.json, .editorconfig, .commitlintrc, tsconfig.json, pnpm-lock.yaml"
  }
}
