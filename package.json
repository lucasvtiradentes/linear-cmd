{
  "name": "linear-cmd",
  "version": "1.0.0",
  "description": "A GitHub CLI-like tool for Linear - manage issues, accounts, and more",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "linear": "./dist/index.js"
  },
  "scripts": {
    "prepare": "husky",
    "build": "rimraf ./dist && tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "format": "prettier --write .",
    "lint": "eslint . --fix",
    "watch": "nodemon --exec tsx src/index.ts",
    "prepublish": "npm run build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:unit": "vitest run --config tests/unit/vitest.config.ts",
    "test:unit:watch": "vitest --config tests/unit/vitest.config.ts",
    "test:integration": "vitest run --config tests/integration/vitest.config.ts",
    "test:integration:watch": "vitest --config tests/integration/vitest.config.ts",
    "test:e2e": "vitest run --config tests/e2e/vitest.config.ts",
    "test:e2e:watch": "vitest --config tests/e2e/vitest.config.ts",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:coverage": "vitest run --coverage",
    "commit": "cz",
    "changeset": "changeset",
    "release": "npm run build && changeset publish"
  },
  "keywords": [
    "linear",
    "cli",
    "issue-tracker",
    "productivity",
    "github-cli"
  ],
  "author": "Lucas Vieira",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "2.27.1",
    "@commitlint/cli": "18.6.1",
    "@commitlint/config-conventional": "18.6.2",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^24.0.14",
    "@typescript-eslint/eslint-plugin": "7.0.1",
    "@typescript-eslint/parser": "7.0.1",
    "commitizen": "4.3.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import-helpers": "1.3.1",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "nodemon": "^3.1.10",
    "prettier": "3.2.5",
    "rimraf": "5.0.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@linear/sdk": "^52.0.0",
    "axios": "^1.10.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "dotenv": "^17.2.0",
    "inquirer": "^12.7.0",
    "json5": "^2.2.3",
    "zod": "^4.0.5"
  }
}
