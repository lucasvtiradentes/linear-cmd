{
  "name": "linear-cli",
  "version": "1.0.0",
  "description": "A GitHub CLI-like tool for Linear - manage issues, accounts, and more",
  "main": "dist/index.js",
  "bin": {
    "linear": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "watch": "nodemon --exec ts-node src/index.ts",
    "prepublish": "npm run build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run src/__tests__/unit",
    "test:integration": "vitest run src/__tests__/integration",
    "test:e2e": "vitest run --config vitest.e2e.config.ts"
  },
  "keywords": [
    "linear",
    "cli",
    "issue-tracker",
    "productivity",
    "github-cli"
  ],
  "author": "Lucas Vieira",
  "license": "MIT",
  "devDependencies": {
    "@types/inquirer": "^9.0.8",
    "@types/node": "^24.0.14",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.3",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@linear/sdk": "^52.0.0",
    "axios": "^1.10.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "dotenv": "^17.2.0",
    "inquirer": "^12.7.0",
    "keytar": "^7.9.0"
  }
}
